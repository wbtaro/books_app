<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.report.title") %></th>
      <th><%= t("activerecord.attributes.report.date") %></th>
      <%- if show_user %>
        <th><%= t("activerecord.attributes.book.contributor") %></th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.date %></td>
        <%- if show_user %>
          <td><%= link_to @users[report.id].name, user_path(@users[report.id]) %></td>
        <% end %>
        <td><%= link_to t("operations.show"), report %></td>
        <%- if report.user_id == current_user.id %>
          <td><%= link_to t("operations.edit", resource: ""), edit_report_path(report) %></td>
          <td><%= link_to t("operations.destroy"), report, method: :delete, data: { confirm: t("warnings.delete") } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @reports %>
