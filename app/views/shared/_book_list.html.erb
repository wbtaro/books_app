<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.book.title") %></th>
      <th><%= t("activerecord.attributes.book.memo") %></th>
      <th><%= t("activerecord.attributes.book.author") %></th>
      <th><%= t("activerecord.attributes.book.picture") %></th>
        <%- if show_user %>
          <th><%= t("activerecord.attributes.book.contributor") %></th>
        <% end %>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <%- if show_user %>
          <td><%= link_to @users[book.id].name, user_path(@users[book.id]) %></td>
        <% end %>
        <td><%= link_to t("operations.show"), book %></td>
        <%- if current_user.id == book.user_id %>
          <td><%= link_to t("operations.edit", resource: ""), edit_book_path(book) %></td>
          <td><%= link_to t("operations.destroy"), book, method: :delete, data: { confirm: t("warnings.delete") } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
