<p>
  <strong><%= t("activerecord.attributes.user.name") %>:</strong>
  <%= @user.name %>
</p>

<p>
  <strong><%= t("activerecord.attributes.user.avatar") %>:</strong>
  <br>
  <%- if @user.avatar.present? %>
    <%= image_tag url_for(@user.avatar), width: "100" %>
  <% end %>
</p>

<p>
  <strong><%= t("activerecord.attributes.user.email") %>:</strong>
  <%= @user.email %>
</p>

<p>
  <strong><%= t("activerecord.attributes.user.postal_code") %>:</strong>
  <%= @user.postal_code %>
</p>

<p>
  <strong><%= t("activerecord.attributes.user.address") %>:</strong>
  <%= @user.address %>
</p>

<p>
  <strong><%= t("activerecord.attributes.user.description") %>:</strong>
  <%= @user.description %>
</p>

<%- if @follow.present? %>
  <%= link_to t("operations.cancel_follow"), follow_path(@follow), method: :delete %><br>
<%- else %>
  <%= form_with model: @new_follow, local: true, url: follows_path do |f| %>
    <%= f.hidden_field :followee_id %>
    <%= f.submit t("operations.follow") %>
  <% end %>
<% end %>

<%= link_to t("activerecord.models.book.owned_books", owner: @user.name), booklist_path(@user) %> <br>

<%= link_to t("operations.back"), users_path %>
